# Este script é executado quando a imagem é gerada

FROM php:7.3-fpm
ENV DEBIAN_FRONTEND noninteractive

#----------------------------------------------
# EXTENSÕES
# Marcadas com [ok] estão instalados por padrão
# os outros podem ser adicionados manualmente
#----------------------------------------------

# [  ] bcmath
# [  ] bz2
# [  ] calendar
# [ok] ctype 
# [ok] curl 
# [  ] dba
# [ok] date 
# [ok] dom 
# [  ] enchant
# [  ] exif
# [ok] ereg 
# [ok] fileinfo 
# [ok] filter 
# [ok] ftp 
# [  ] gd
# [  ] gettext
# [  ] gmp
# [ok] hash 
# [ok] iconv 
# [  ] imap
# [ok] json 
# [  ] ldap
# [ok] libxml 
# [ok] mbstring 
# [ok] mhash 
# [  ] mcrypt
# [  ] mysqli 
# [ok] mysqlnd
# [  ] oci8
# [  ] odbc
# [  ] opcache
# [ok] openssl 
# [ok] pcre 
# [  ] pcntl
# [ok] pdo
# [  ] pdo_dblib
# [  ] pdo_firebird
# [  ] pdo_mysql
# [  ] pdo_oci
# [  ] pdo_odbc
# [  ] pdo_pgsql
# [ok] pdo_sqlite
